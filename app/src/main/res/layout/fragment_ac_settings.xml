<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/VaavioLogo"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vaavio_logo" />

    <TextView
        android:id="@+id/AccountInstellingenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Account Instellingen"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VaavioLogo" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AccountInstellingenTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/WachtwoordAanpassenTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Wachtwoord veranderen"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/HuidigWachtwoordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:ems="10"
                android:hint="Huidig wachtwoord"
                android:inputType="textPassword"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="169dp" />

            <EditText
                android:id="@+id/NieuwWachtwoordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:ems="10"
                android:hint="Nieuw wachtwoord"
                android:inputType="textPassword"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="169dp" />

            <EditText
                android:id="@+id/NieuwWachtwoordHerhalenEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:ems="10"
                android:hint="Nieuw wactwoord herhalen"
                android:inputType="textPassword"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="169dp" />

            <Button
                android:id="@+id/BevestingenBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#008bab"
                android:text="Bevestingen"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/AccountVerwijderenTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Verwijderen account"
                android:textColor="#000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/WachtwoordDeleteEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:ems="10"
                android:hint="Huidig wachtwoord"
                android:inputType="textPassword"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="169dp" />

            <Button
                android:id="@+id/AccountVerwijderenBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#008bab"
                android:text="Verwijder Account"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
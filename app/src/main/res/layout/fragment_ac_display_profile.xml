        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBannerDis"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBannerDis"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewBannerDis"
        app:layout_constraintTop_toTopOf="@+id/imageViewBannerDis"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@drawable/background_nav_header"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/ImageViewNavHeader"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/vaavio_logo_small"
        android:background="#FAFAFA"
        android:padding="1dp"/>

    <TextView
        android:id="@+id/TextViewNaamNavHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="Vaavio"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/TextViewEmailNavHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uw vacaturebank!"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="16dp" />


</LinearLayout>
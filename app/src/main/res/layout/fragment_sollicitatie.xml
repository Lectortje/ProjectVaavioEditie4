<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/VerstuurSollicitatieBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#008bab"
        android:text="Verstuur"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TextViewSollicitatie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Sollicitatie"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@+id/ScrollViewContact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/ScrollViewSollicitatie"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/VerstuurSollicitatieBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewSollicitatie">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImageViewIcPerson2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                app:srcCompat="@drawable/ic_person" />

            <EditText
                android:id="@+id/EditTextNaamSollicitatie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-37dp"
                android:ems="10"
                android:hint="Naam"
                android:inputType="textPersonName"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/EditTextAchternaamSollicitatie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dp"
                android:ems="10"
                android:hint="Achternaam"
                android:inputType="textPersonName"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ImageViewIcEmail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                app:srcCompat="@drawable/ic_email" />

            <EditText
                android:id="@+id/EditTextEmailSollicitatie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-37dp"
                android:ems="10"
                android:hint="E-mailadres"
                android:inputType="textEmailAddress"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ImageViewIcPhone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                app:srcCompat="@drawable/ic_telefoon" />

            <EditText
                android:id="@+id/EditTextTelefoonSollicitatie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-37dp"
                android:ems="10"
                android:hint="Telefoonnummer"
                android:inputType="textPersonName"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ImageViewIcPen2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                app:srcCompat="@drawable/ic_pen" />

            <EditText
                android:id="@+id/EditTextBerichtSollicitatie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-37dp"
                android:ems="10"
                android:hint="Typ hier uw bericht"
                android:inputType="textMultiLine"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
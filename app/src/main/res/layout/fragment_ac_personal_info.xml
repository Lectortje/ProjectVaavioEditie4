<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ImageViewProfilePicture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="#FAFAFA"
        app:layout_constraintBottom_toTopOf="@+id/ScrollViewPersonalInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextViewProfielfoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Profielfoto"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/ScrollViewPersonalInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/ImageViewProfilePicture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/OpslaanBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#008bab"
        android:text="Opslaan"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/UploadPFBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/UploadPFBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#008bab"
        android:text="Upload profielfoto"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/OpslaanBtn" />

    <ScrollView
        android:id="@+id/ScrollViewPersonalInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toTopOf="@+id/OpslaanBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageViewProfilePicture">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextViewNaam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Naam"
                android:textColor="#000"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

            <EditText
                android:id="@+id/EditTextNaam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Naam"
                android:textColor="#808080"
                android:inputType="textPersonName"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/TextViewAchternaam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Achternaam"
                android:textColor="#000"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

            <EditText
                android:id="@+id/EditTextAchternaam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Achternaam"
                android:textColor="#808080"
                android:inputType="textPersonName"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/TextViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="E-mailadres"
                android:textColor="#000"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

            <EditText
                android:id="@+id/EditTextEmailadres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="E-mailadres"
                android:textColor="#808080"
                android:inputType="textEmailAddress"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/TextViewTelefoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Telefoonnummer"
                android:textColor="#000"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

            <EditText
                android:id="@+id/EditTextTelefoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#808080"
                android:hint="Telefoonnummer"
                android:inputType="phone"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/TextViewAdres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Adres"
                android:textColor="#000"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

            <EditText
                android:id="@+id/EditTextAdres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#808080"
                android:hint="Straat"
                android:inputType="textPersonName"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/TextViewHuisnummer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Huisnummer"
                android:textColor="#000"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

            <EditText
                android:id="@+id/EditTextHuisnummer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="#808080"
                android:hint="Huisnummer"
                android:inputType="number"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/TextViewToevoeging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Toevoeging"
                android:textColor="#000"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

            <EditText
                android:id="@+id/EditTextToevoeging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Toevoeging"
                android:textColor="#808080"
                android:inputType="textPersonName"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/TextViewWoonplaats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Woonplaats"
                android:textColor="#000"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

            <EditText
                android:id="@+id/EditTextWoonplaats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Woonplaats"
                android:textColor="#808080"
                android:inputType="textPersonName"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/TextViewPostcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Postcode"
                android:textColor="#000"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

            <EditText
                android:id="@+id/EditTextPostcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Postcode"
                android:textColor="#808080"
                android:inputType="textPostalAddress"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/TextViewGeboortedatumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Geboortedatum"
                android:textColor="#000"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

            <TextView
                android:id="@+id/TextViewGeboortedatum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="#808080"
                android:hint="Selecteer datum..."
                android:textSize="12sp"
                android:padding="4dp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

            <TextView
                android:id="@+id/TextViewGeslacht"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Geslacht"
                android:textColor="#000"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

            <Spinner
                android:id="@+id/SpinnerGeslacht"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/TextViewNationaliteit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Nationaliteit"
                android:textColor="#000"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="63dp"
                tools:layout_editor_absoluteY="54dp" />

            <Spinner
                android:id="@+id/SpinnerNationaliteit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>